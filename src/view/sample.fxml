<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SampleController">
    <children>
        <TextField fx:id="txtCustomerId" layoutX="40.0" layoutY="90.0" promptText="id" />
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#00519e" height="60.0" layoutY="-1.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="600.0" />
        <TextField fx:id="txtAddress" layoutX="40.0" layoutY="140.0" promptText="address" />
        <TextField fx:id="txtName" layoutX="217.0" layoutY="90.0" promptText="name" />
        <TextField fx:id="txtSalary" layoutX="217.0" layoutY="140.0" promptText="salary" />
        <TextField fx:id="txtEmail" layoutX="394.0" layoutY="90.0" promptText="email" />
        <Label layoutX="188.0" layoutY="13.0" text="Add Customer Form" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>
        <Button layoutX="454.0" layoutY="140.0" mnemonicParsing="false" onAction="#btnAddCustomerOnAction" text="add customer" />
        <TableView fx:id="tblCustomerList" layoutX="40.0" layoutY="187.0" prefHeight="162.0" prefWidth="510.0">
            <columns>
                <TableColumn fx:id="colCustomerId" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="colName" prefWidth="108.0" text="Name" />
                <TableColumn fx:id="colEmail" prefWidth="104.0" text="Email" />
                <TableColumn fx:id="colAddress" prefWidth="111.0" text="Address" />
                <TableColumn fx:id="colSalary" prefWidth="111.0" text="Salary" />
            </columns>
        </TableView>
        <Button layoutX="509.0" layoutY="361.0" mnemonicParsing="false" onAction="#btnReloadOnAction" text="Reload" />
    </children>
</AnchorPane>